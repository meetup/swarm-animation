<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=Edge" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no" />

	<title>swarm-sasstools <!-- @echo VERSION --></title>

	<!-- font & SQ2 base -->
	<link rel="stylesheet" href="<!-- @echo FONT_URL -->">
	<link rel="stylesheet" href="<!-- @echo SQ2_URL -->">

	<!-- swarm animation CSS to be documented -->
	<link rel="stylesheet" href="<!-- @echo ANIMATION_CSS_PATH -->">
	<link rel="stylesheet" href="<!-- @echo DOCS_CSS_PATH -->">

	<!-- Styleguide CSS -->
	<link rel="stylesheet" href="assets/pushy.css">
	<!--
	<link rel="stylesheet" href="./hljs.css">
	-->
</head>

<!--[if IE 8]> <body class="lang_en ieRoot_IE8 ieRoot_lt_IE9 ieRoot_lt_IE10"> <![endif]-->
<!--[if IE 9]> <body class="lang_en ieRoot_IE9 ieRoot_lt_IE10"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--> <body class="lang_en ieRoot_modern"> <!--<![endif]-->

<nav class="stripe stripe--black pushy pushy-left">

	<ul class="pushy-content">
		{{#each categoryObj}}
			<li class="pushy-submenu">
				<button class="button button--contrast button--fullWidth">{{this.title}}</button>
				<ul>
					{{#each this.blocks}}
						<li class="pushy-link">
							<a href="#{{this.name}}">{{this.title}}</a>
						</li>
					{{/each}}
				</ul>
			</li>
		{{/each}}
	</ul>

</nav>

<div class="column">

	<header id="header" class="column-item column-item--shrink stripe stripe--black inverted">
		<div class="row">
			<div class="row-item row-item--shrink">
				<div id="docMenu">
					<a class="menu-btn text--big">&#9776;</a>
				</div>
			</div>
			<h1 class="row-item chunk text--big">swarm-animation</h1>
			<!-- @echo DESCRIPTION -->
			<a href="<!-- @echo GITHUB_URL -->" class="row-item row-item--shrink chunk text--big"><!-- @echo VERSION --></a>
		</div>
	</header>

	<main class="column-item">

		<section id="content" class="stripe">
			<div class="bounds">

				{{! categories }}
				{{#each categoryObj}}
				<div class="doc_category">
					<h2 class="doc_category-title text--heavy text--display1">
						<a class="offsetAnchor" name="{{this.name}}">{{this.title}}</a>
					</h2>

					{{! category-level blocks }}
					<div class="doc_category-blocks">
						{{#each this.blocks}}
						<dl class="doc_block">
							<dt class="doc_block-title text--bold">
								<a class="offsetAnchor" name="{{this.name}}">{{this.title}}</a>
							</dt>
							<dd class="doc_block-desc">{{{this.description}}}</dd>

							{{! block children }}
							<dd class="doc_block-children">
								<dl class="doc_childBlock">
								{{#each this.children}}
									<dt class="doc_block-title text--heavy">{{this.title}}<dt>
									<dd class="doc_block-desc">{{{this.description}}}</dd>
								{{/each}}
								</dl>
							</dd>

						</dl>
						{{/each}}
					</div>

				</div>
				{{/each}}

			</div>
		</section>
	</main>
</div>


<script type="text/javascript" src="//code.jquery.com/jquery-2.1.3.min.js"></script>
<script src="//cdn.jsdelivr.net/highlight.js/9.1.0/highlight.min.js"></script>
<!-- swarm-animation js -->
<script src="<!-- @echo ANIMATION_JS_PATH -->"></script>
<script src="<!-- @echo DOCS_JS_PATH -->"></script>

<script src="assets/pushy.min.js"></script>

</body>
</html>
